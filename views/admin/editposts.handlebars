<h3>Editar postagem:</h3>
<div class="card">
    {{posts.content}}
    <div class="card-body">
        <form action="/admin/posts/edit" method="POST">
            <input type="hidden" value="{{posts._id}}" name="id">
            <label for='nome'> Titulo: </label>
            <input type="text" id="title" name="title" class="form-control" value="{{posts.title}}">
            <label for='slug'> Slug:</label>
            <input type="text" id="slug" name="slug" class="form-control" value="{{posts.slug}}">
            <label for='slug'> Descrissão:</label>
            <input type="text" id="description" name="description" placeholder="Descrissão da postagem" class="form-control" value="{{posts.description}}">
            <label for='slug'> Conteúdo:</label>
            <textarea name="content" class="form-control" >{{posts.content}}</textarea></br>
            <label for="categorias"> Categoria:</label>
            <select name="category" class="custom-select">
                {{#each categorias}}
                    <option value="{{ _id}}">{{nome}}</option>
                {{else}}
                    <option value="0"> Nenhuma categoria registrada </option>
                {{/each}}
            </select>    
            <br>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>